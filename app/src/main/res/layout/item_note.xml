<?xml version="1.0" encoding="utf-8"?>
<taro.rikkeisoft.com.assignment.base.CustomCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/cv_note"
    android:elevation="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin">

        <ImageView
            android:id="@+id/imv_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_alarm_black_24dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imv_alarm"
            android:textColor="@color/black"
            android:maxLines="1"
            android:text="Title"
            android:textSize="@dimen/text_size_title"/>
        <TextView
            android:id="@+id/spacing"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/imv_alarm"
            android:layout_marginTop="@dimen/padding"
            android:background="@color/gray"></TextView>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spacing"
            android:layout_marginTop="@dimen/margin"
            android:padding="@dimen/padding"
            android:textSize="@dimen/text_size_content"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="date"/>
    </RelativeLayout>



</taro.rikkeisoft.com.assignment.base.CustomCardView>